{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".",
    "target": "esnext",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES5", "dom"],
    "incremental": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@fengqiaogang"
    ],
    "paths": {
      "src/*": ["./src/*"],
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.dts",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}